{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "outDir": "build",
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}