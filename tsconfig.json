{
  "compilerOptions": {
    "noEmitOnError": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "build",
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "skipLibCheck": true,
    // "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "rollup.config.ts"
  ]
}